<%= render partial: "_partials/nav", locals: { title: "New Transaction", font_aws: "fa-circle-chevron-left fa-lg", back_path: categories_path} %>


<div class = "new-cat-form-cont">
  <%= form_with(model: @activity) do |form| %>
    <% if @activity.errors.any? %>
      <div>
        <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
  
        <ul>
          <% @activity.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.text_field :name,  autofocus: true, required: true, placeholder: "Transaction Name", class: "category-icon-input" %>
    </div>
  
    <div class="field">
      <%= form.number_field :amount, required: true, placeholder: "Add you amount", class: "category-icon-input" %>
    </div>
  
    <div class="form-group">
          <label for="food" class="form-label">Category: </label>
          <%= form.select :category_id, current_user.categories.map { |category| [category.name, category.id]} ,  {}, :class => "cat-selector" %> 
    </div>
  
    <div class="actions mt-5">
      <%= form.submit 'Save Transaction', class: "new-cat-save-btn" %>
    </div>
  <% end %>
</div>