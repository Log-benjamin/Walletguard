<div class = "home-link">  
  <%= link_to root_path do %>
    <i class="fa-solid fa-house" style="color: #1e60d2;"></i>
  <% end %>
</div>
<div class="sign_in_container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, class: "input-fiel", autofocus: true, placeholder: "Name", autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.email_field :email, class: "input-fiel", autofocus: true, placeholder: "Email", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: "input-fiel", autocomplete: "new-password", placeholder: "Password (6 characters minimum)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, class: "input-fiel", autocomplete: "new-password", placeholder: "confirm password" %>
      </div>

      <div class="actions">
        <%= f.submit "SIGN UP", class: "sbm-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>